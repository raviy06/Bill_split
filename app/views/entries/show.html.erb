<%= render 'shared/navbar' %>

<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="row">
      <div class="col-md-8"></div>
      <div class="col-md-4" style="margin-top: 20px;">
        <%= link_to 'Edit', edit_entry_path(@entry), :class => "btn btn-danger" %>
        <%= link_to 'Back', entries_path, :class => "btn btn-primary" %>
      </div>
    </div>
    <p>
      <strong>Event:</strong>
      <%= @entry.event %>
    </p>

    <p>
      <strong>Event date:</strong>
      <%= @entry.event_date %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @entry.description %>
    </p>

    <p>
      <strong>Location:</strong>
      <%= @entry.location %>
    </p>

    <p>
      <strong>Total amount:</strong>
      <%= @entry.total_amount %>
    </p>

    <% @guests.each do |guest| %>
      <%= guest.user.name %> paid $<%= sprintf( "%0.02f", guest.amount_paid) %>. <%= guest.user.name %> should have paid $<%= sprintf( "%0.02f", guest.amount_should_have_paid) %>.
      <br>
    <% end %>
    

  </div>
</div>
