<%= render 'shared/navbar' %>

<p id="notice"><%= notice %></p>


<div class="container">
  <div class="row">
    <div class="col-md-4">Money Lent: <%#= current_user.money_lent if !current_user.money_lent.nil? %></div>
    <div class="col-md-4">Money Borrowed: <%#= current_user.money_borrowed if !current_user.money_borrowed.nil? %></div>
    <div class="col-md-4">Overall Balance: <%#= @overall_balance %></div>
  </div>
  <div class="row">
    <div class="row">
      <div class="col-md-8"><h1>Entries</h1></div>
      <div class="col-md-4" style="margin-top: 20px;">
        
          <%= link_to 'New Entry', new_entry_path, :class => "btn btn-success" %>
          <% if user_signed_in? %>
            <%= link_to 'Settle', settle_path, :class => "btn btn-danger" %>
          <% end %>
      </div>
    </div>
    

      <table class="table table-striped">
        <thead>
          <tr>
            <th>Event</th>
            <th>Event date</th>
            <th>Description</th>
            <th>Location</th>
            <th>Total amount</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @entries.each do |entry| %>
            <tr>
              <td><%= entry.event %></td>
              <td><%= entry.event_date %></td>
              <td><%= entry.description %></td>
              <td><%= entry.location %></td>
              <td><%= entry.total_amount %></td>
              <td><%= link_to 'Show', entry %></td>
              <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
              <td><%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      
  </div>
</div>

